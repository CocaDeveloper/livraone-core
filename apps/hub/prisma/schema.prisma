generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(uuid()) @db.Uuid
  orgId     String   @map("org_id") @db.Uuid
  name      String   @db.Text
  status    String   @default("active") @db.Text
  address   String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  members ProjectMember[]

  @@map("projects")
}

model ProjectMember {
  projectId String   @map("project_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  role      String   @db.Text
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@id([projectId, userId])
  @@map("project_members")
}



// ===== LIVRAONE ENTITLEMENT MINIMAL MODELS (AUTO) =====
enum SubscriptionStatus {
  TRIAL
  ACTIVE
  PAST_DUE
  CANCELED
  EXPIRED
}

model Tenant {
  id            String   @id @default(cuid())
  slug          String   @unique
  name          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  memberships   Membership[]
  subscriptions Subscription[]
  entitlements  Entitlement[]
}

model Membership {
  id        String   @id @default(cuid())
  tenantId  String
  userId    String
  role      String   // "owner"|"admin"|"member" (keep string; RBAC can evolve later)
  createdAt DateTime @default(now())

  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, userId])
  @@index([userId])
}

model Subscription {
  id         String             @id @default(cuid())
  tenantId   String
  status     SubscriptionStatus @default(TRIAL)
  plan       String             @default("trial")
  trialEndsAt DateTime?
  currentPeriodEndsAt DateTime?
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt

  tenant     Tenant             @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
}

model Entitlement {
  id        String   @id @default(cuid())
  tenantId  String
  key       String   // e.g. "hub.access", "invoice.access"
  value     String   // e.g. "true"|"false" or tier string
  source    String   @default("plan") // "plan"|"override"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, key])
  @@index([tenantId])
}
