# LivraOne baseline environment
APP_NAME=LivraOne
NODE_ENV=development

# Cloudflare DNS-01 provider token (must include Zone:DNS:Edit + Zone:Zone:Read scopes, scoped to livraone.com)
CF_API_TOKEN=changeme0123456789abcdef

# Email address used for ACME notifications (prefix with mailto:)
ACME_EMAIL=mailto:ops@example.com

# Certificate Authority endpoint (optional: use staging for testing)
ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory

# Keycloak / Postgres bootstrap (phase 5)
POSTGRES_DB=livraone
POSTGRES_USER=livraone
POSTGRES_PASSWORD=livraone
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://postgres-auth:5432/livraone
KC_DB_USERNAME=livraone
KC_DB_PASSWORD=livraone
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_HUB_SECRET=hub-secret-please-change
KEYCLOAK_INVOICE_SECRET=invoice-secret-please-change
KC_HOSTNAME_STRICT=true
KC_FRONTEND_URL=https://auth.livraone.com/realms/livraone
KC_HOSTNAME=https://auth.livraone.com
KC_HTTP_PORT=8080
KC_HTTPS_PORT=443
